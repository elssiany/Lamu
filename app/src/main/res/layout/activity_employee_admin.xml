<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dkbrothers.app.lamus.activities.MainActivity">

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_add_red_500_48dp"
            android:layout_width="160dp"
            android:layout_height="100dp" />

        <TextView
            android:textStyle="bold|italic"
            android:text="Nuevo Usuario"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_names"
            android:layout_margin="10dp"
            android:inputType="textEmailSubject"
            android:hint="Nombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_last_names"
          android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="textEmailSubject"
            android:hint="Apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_email"
            android:layout_margin="10dp"
            android:inputType="textEmailSubject"
            android:hint="Ingrese su email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_password"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold|italic"
            android:text="Contraseña: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_save"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:text="Iniciar sesión"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/rectangle_primary_color"
            android:layout_width="260dp"
            android:layout_height="40dp" />


    </LinearLayout>


</FrameLayout>

